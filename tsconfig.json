{
	"compilerOptions": {
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["es6", "dom"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"sourceMap": true,
		"target": "es6",
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"@types/node"
		]
	},
	"files": [
		"src/main.ts"
	],
	"exclude": [
		"node_modules"
	]
}
